					<TextView
						android:layout_marginTop="12dp"
						android:textColor="#6F6F6F"
						android:textSize="18sp"
						android:text="Calendar"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" />

				</LinearLayout>

			</android.support.v7.widget.CardView>
			
		</GridLayout>
		
	</LinearLayout>
	
</ScrollView>
	


